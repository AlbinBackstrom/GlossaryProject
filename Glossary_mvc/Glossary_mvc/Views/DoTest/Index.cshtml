@model Glossary_mvc.Models.DoTestModel

@{
    ViewBag.Title = "Index";
}

<h2>Gör ditt glostest</h2>

<div class="container">
    <hr />
    @using (Html.BeginForm("GuessedWords", "DoTest"))
    {
        for (int i = 0; i < Model.Words.Count; i++)
        {
            <div class="row">
                <div class="form-group">
                    <div class="col-md-3">
                        <span class="font-size">
                            @Html.DisplayFor(m => Model.Words[i].Word1, new { htmlAttributes = new { @class = "form-control" } })
                        </span>
                    </div>
                    <div class="col-md-3">
                        @Html.EditorFor(m => Model.mGuessedWord[i], new { htmlAttributes = new { @class = "form-control" } })
                        <br />
                    </div>
                </div>
            </div>
        }
        <input type="submit" class="btn btn-default" value="Rätta test" />
    }
</div>

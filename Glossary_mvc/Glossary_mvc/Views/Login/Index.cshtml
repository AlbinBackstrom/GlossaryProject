@model Glossary_mvc.Models.LoginModel

@{
    ViewBag.Title = "Index";
}

<h2>Logga in</h2>

@if (ViewBag.SuccessResult == true)
{
    <div class="alert alert-success">
        <strong>Tack!</strong> Du är nu registrerad och kan logga in.
    </div>
}

@using (Html.BeginForm("Index", "Login"))
{
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.Label("Användarnamn:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Username, new { @id = "Username", @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Lösenord:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @id = "Password", @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Logga in" class="btn btn-default" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Inte medlem? Klicka här", "Create", "Register")
            </div>
        </div>
    </div>
}

@if (ViewBag.LoggedInFail == true)
{
    <div class="alert alert-danger">
        <strong>Fel användarnamn eller lösenord!</strong> Var god försök igen.
    </div>
}

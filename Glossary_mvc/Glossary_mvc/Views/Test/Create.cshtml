@model Glossary_mvc.Models.TestModel

@{
    ViewBag.Title = "Create";
}

<h2>Skapa test</h2>
<hr />

@using (Html.BeginForm("Create", "Test"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="container-add">
        <div class="row">
            <div class="col-md-4">
                <label>Namnge ditt test</label>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                <label>Originalspråk</label>
                @Html.DropDownListFor(m => m.MainLang, new SelectList(ViewBag.Languages, "Id", "Language1"), "Välj ett språk", new { @class = "form-control" })
            </div>

            <div class="col-md-4">
                <label>Översättning</label>
                @Html.DropDownListFor(m => m.SecLang, new SelectList(ViewBag.Languages, "Id", "Language1"), "Välj ett språk", new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="">
                <input type="submit" class="btn btn-default" value="Spara" />
            </div>
        </div>
    </div>
}

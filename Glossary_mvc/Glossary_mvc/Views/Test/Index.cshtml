@model IEnumerable<Glossary_mvc.Test>

@{
    ViewBag.Title = "Index";
}

<h2>Mina test</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-add">
        @Html.ActionLink("Skapa nytt test", "Create")
        <br />
        <br />

        @foreach (Test test in Model)
        {
            <div class="col-md-3 col-sm-4 col-lg-3">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@test.Name</h3>
                    </div>
                    <div class="panel-body">
                        <p>
                            @test.Language.Language1 till @test.Language1.Language1
                        </p>
                        @Html.ActionLink("Starta test", "Index", "DoTest", new { id = test.Id }, new { @class = "btn btn-success btn-xs" })
                        @Html.ActionLink("Redigera test", "CreateWords", "Words", new { id = test.Id }, new { @class = "btn btn-warning btn-xs" })
                    </div>
                </div>
            </div>
        }
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

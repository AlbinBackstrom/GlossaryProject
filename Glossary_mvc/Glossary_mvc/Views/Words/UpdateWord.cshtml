@model Glossary_mvc.Word

@{
    ViewBag.Title = "UpdateWord";
}

<h2>Redigera ord</h2>
<hr />

@using (Html.BeginForm("UpdatedWord", "Words"))
{
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.TestId)
    @Html.AntiForgeryToken()

    <div class="container-add">
        <div class="row">
            <div class="col-md-4">
                <label>Originalspråk</label>
                @Html.EditorFor(model => model.Word1, new { htmlAttributes = new { @class = "form-control", placeholder = "" } })
                @Html.ValidationMessageFor(model => model.Word1, "", new { @class = "text-danger" })
            </div>

            <div class="row">
                <div class="col-md-4">
                    <label>Översättning</label>
                    @Html.EditorFor(model => model.Word2, new { htmlAttributes = new { @class = "form-control", placeholder = "" } })
                    @Html.ValidationMessageFor(model => model.Word2, "", new { @class = "text-danger" })
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <br />
                        <input type="submit" class="btn btn-default" value="Spara" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
